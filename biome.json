{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": [".next/**", "node_modules/**", "public/**", ".github/**", "out/**", "coverage/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      ".next/**",
      "node_modules/**",
      "public/**",
      ".github/**",
      "out/**",
      "coverage/**",
      "next.config.ts",
      "postcss.config.mjs",
      "tailwind.config.ts",
      "tsconfig.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": [
      ".next/**",
      "node_modules/**",
      "public/**",
      ".github/**",
      "out/**",
      "coverage/**",
      "postcss.config.mjs",
      "tailwind.config.ts",
      "tsconfig.json"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded"
    }
  }
}
